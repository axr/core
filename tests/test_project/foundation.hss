*
{
    #new menu
    {
        // height: max(150, min(50, 20%));
        background: darkBarGradientGloss;
        alignModePrimary: distribute;
        content: @request { "navigation.xml" };
        // padding: @{ 50 left }, @{ 50 right};

        // #unwrap navigation;

        * {
            isA: button1;
            behavior: @click {
                @request { attr("href") }
            };
        }
    }

    #new content
    {
        height: 100% - (ref(height of menu) + ref(height of footer));
        contentAlignY: 50%;
    }

    #new footer
    {
        height: max(150, min(50, 20%));
    }

    *
    {
        parent: content;
    }

    #delete metadata;
}
